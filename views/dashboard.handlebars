<div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="header center orange-text">My Dashboard </h1>
      <div class="row center">
        
        {{#if dashboardData.length}}
        <table>
                <thead>
                  <tr>
                    <th>Receipient</th>
                    <th>Type of Flyer</th>
                    <th>Schedule</th>
                    <th></th>
                  </tr>
                </thead>
        <ol>
            {{#each dashboardData as |flyer|}}
            <li class="nostyle">
                {{> flyer-info flyer}}      
            </li>
            {{/each}}
        </ol>
        </table>
        {{else}}
        <p>You have no flyers yet.</p>
        {{/if}}
      </div>
      <form action="/dashboard/create" class="row center">
        <button type="submit" class="btn-large waves-effect waves-light blue">Create a New Flyer</button>
    </form>
    </div>
  </div>